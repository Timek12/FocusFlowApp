@model UserTaskUpdateVM

<div class="d-flex justify-content-center">
    <div class="card text-center">
        <div class="card-header">
            <h1>
                Update Task
            </h1>
        </div>
        <div class="card-body d-flex justify-content-center">
            <form method="post" class="row">
                <input asp-for="@Model.UserTask.UserId" hidden />
                <input asp-for="@Model.UserTask.TaskId" hidden />
                <input asp-for="@Model.UserTask.CreatedAt" hidden />
                <div class="form-group form-floating col-md-8 offset-md-2 mb-3">
                    <input asp-for="@Model.UserTask.Name" class="form-control" placeholder="Name">
                    <label asp-for="@Model.UserTask.Name" class="form-label"></label>
                    <span asp-validation-for="@Model.UserTask.Name" class="text-danger"></span>
                </div>

                <div class="form-group form-floating col-md-8 offset-md-2 mb-3">
                    <input asp-for="@Model.UserTask.Description" class="form-control" placeholder="Description">
                    <label asp-for="@Model.UserTask.Description"></label>
                    <span asp-validation-for="@Model.UserTask.Description" class="text-danger"></span>
                </div>

                <div class="form-group form-floating col-md-8 offset-md-2 mb-3">
                    <select asp-for="@Model.UserTask.Status" asp-items="@Model.StatusList" class="form-select">
                    </select>
                    <label asp-for="@Model.StatusList"></label>
                    <span asp-validation-for="@Model.UserTask.Status"></span>
                </div>

                <div class="form-group form-floating col-md-8 offset-md-2 mb-3">
                    <select asp-for="@Model.UserTask.Importance" asp-items="@Model.ImportanceList" class="form-select">
                        <option disabled selected>Select Importance</option>
                    </select>
                    <label asp-for="@Model.ImportanceList"></label>
                    <span asp-validation-for="@Model.UserTask.Importance"></span>
                </div>

                <div class="form-group form-floating col-md-8 offset-md-2 mb-3">
                    <input asp-for="@Model.UserTask.Deadline" type="datetime-local" class="form-control">
                    <label asp-for="@Model.UserTask.Deadline"></label>
                    <span asp-validation-for="@Model.UserTask.Deadline" class="text-danger"></span>
                </div>
                <div class="btn btn-group">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary col-md-6 w-80">Update</button>
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-secondary col-md-6 w-80" asp-action="Index">Cancel</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}