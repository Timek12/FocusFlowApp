<div class="container-fluid">
    <div class="row">
        <div class="page-title-box d-flex align-items-center justify-content-center">
            <h1 class="mb-0">Dashboard</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <p>Last 30 days Tasks</p>
                    </div>
                    <div id="getTasksLineChart"></div>

                    <div class="justify-content-center text-center chart-spinner" style="display: none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <p>Task Status</p>
                    </div>
                    <div id="totalTasksStatusPieChart"></div>

                    <div class="justify-content-center text-center chart-spinner" style="display: none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <p>Last 30 days Pomodoro Sessions</p>
                    </div>
                    <div id="getSessionsLineChart"></div>

                    <div class="justify-content-center text-center chart-spinner" style="display: none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <p>Task Importance</p>
                    </div>
                    <div id="totalTasksImportancePieChart"></div>

                    <div class="justify-content-center text-center chart-spinner" style="display: none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

@section Scripts {
    <script src="~/js/dashboard/index.js" type="module"></script>
}